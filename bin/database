#!/bin/bash

database=$(php -r '$global = require_once("config/autoload/global.testing.php"); echo $global["doctrine"***REMOVED***["connection"***REMOVED***["orm_default"***REMOVED***["params"***REMOVED***["dbname"***REMOVED***;')
username=$(php -r '$local = require_once("config/autoload/local.php"); echo $local["doctrine"***REMOVED***["connection"***REMOVED***["orm_default"***REMOVED***["params"***REMOVED***["user"***REMOVED***;')
password=$(php -r '$local = require_once("config/autoload/local.php"); echo $local["doctrine"***REMOVED***["connection"***REMOVED***["orm_default"***REMOVED***["params"***REMOVED***["password"***REMOVED***;')

mysql -u $username -h localhost -p$password -Bse "DROP DATABASE $database;" &> /dev/null
mysql -u $username -h localhost -p$password -Bse "CREATE DATABASE IF NOT EXISTS $database;"  &> /dev/null

echo "Banco de dados $database criado."
echo -n "[OK***REMOVED***"