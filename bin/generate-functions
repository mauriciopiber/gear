}

function createNamespace($type, $number, $numberMap)
{
    $textName = '';
    
    for ($x = 1; $x <= $number; $x++) {
    
        if (!empty($textName)) {
            $textName .= '\\';
        }
        $textName .= sprintf('%s%s', substr($type, 0, 5), $numberMap[$x***REMOVED***);
    
    }


    return $textName;
}

