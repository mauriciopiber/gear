#!/bin/bash

nodepath="/opt/node_modules"

ls -l $nodepath &> /dev/null

if [ "$?" != "0" ***REMOVED***; then

    mkdir $nodepath

fi

ls -l node_modules/.bin/webdriver-manager &> /dev/null

if [ "$?" != "0" ***REMOVED***; then


    ls -l $nodepath/node_modules.tar.gz &> /dev/null

    if [ "$?" == "0" ***REMOVED***;
    then
        echo "COPIANDO NODE-JS"
        sudo tar -zxvf $nodepath/node_modules.tar.gz node_modules &> /dev/null
        sudo chmod +x -R node_modules/.bin
        sudo npm install
        sudo node_modules/.bin/webdriver-manager update
        sudo chown $(id -gn):$(id -gn) -R node_modules


    else
        echo "INSTALANDO NODE-JS"
        sudo npm install
        sudo node_modules/.bin/webdriver-manager update
        sudo tar -zcvf $nodepath/node_modules.tar.gz node_modules
        sudo chown $(id -gn):$(id -gn) -R node_modules        
    fi

fi
