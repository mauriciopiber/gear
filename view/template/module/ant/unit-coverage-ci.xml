<target name="unit-coverage-ci" depends="set-vendor, build-helper" description="Run unit tests with Codeception For Continuous Integration">
    <exec executable="${vendor}/bin/codecept">
        <arg value="run"/>
        <arg value="unit"/>
        <arg value="--xml"/>
        <arg value="--coverage-xml"/>
        <arg value="--coverage-html"/>
    </exec>
</target>