    public function setUp()
    {
        $this->setApplicationConfig(
            include \GearBase\Module::getProjectFolder().'/config/application.config.php'
        );
        parent::setUp();

        $this->controller = new MyController();
        $this->request    = new Request();
        $this->routeMatch = new RouteMatch(array('controller' => 'MyController'));
        $this->event      = new MvcEvent();

        $this->event->setRouteMatch($this->routeMatch);
        $this->controller->setEvent($this->event);

        $this->myForm = $this->prophesize('MyModule\Form\MyForm');
        $this->mySearchForm = $this->prophesize('MyModule\Form\Search\MySearchForm');
        $this->myService = $this->prophesize('MyModule\Service\MyService');

        $requestPlugin = new \GearBase\Controller\Plugin\RequestPlugin();

        $this->controller->getPluginManager()->setService('getRequestPlugin', $requestPlugin);

        $this->url = $this->prophesize('Zend\Mvc\Controller\Plugin\Url');

        $this->controller->getPluginManager()->setService('url', $this->url->reveal());


        $this->controller->setMyForm($this->myForm->reveal());
        $this->controller->setMyService($this->myService->reveal());
        $this->controller->setMySearchForm($this->mySearchForm->reveal());
    }

    protected function tearDown()
    {
        $refl = new \ReflectionObject($this);
        foreach ($refl->getProperties() as $prop) {
            if (!$prop->isStatic() && 0 !== strpos($prop->getDeclaringClass()->getName(), 'PHPUnit_')) {
                $prop->setAccessible(true);
                $prop->setValue($this, null);
            }
        }
    }

