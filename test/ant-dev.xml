<?xml version="1.0" encoding="UTF-8"?>
<project name="gear-dev" default="" basedir=".">
    <target name="phpcs" description="Code Sniffer" depends="set-vendor">
        <exec executable="${vendor}/bin/phpcs">
            <arg value="--standard=test/phpcs.xml"/>
            <arg path="${basedir}/src"/>
        </exec>
    </target>
    <target name="phpmd" description="MessDetector" depends="set-vendor">
        <exec executable="${vendor}/bin/phpmd">
            <arg path="${basedir}/src"/>
            <arg value="text"/>
            <arg value="${basedir}/test/phpmd.xml"/>
        </exec>
    </target>
    <target name="phpcpd" description="PHPCPD" depends="set-vendor">
        <exec executable="${vendor}/bin/phpcpd">
            <arg path="${basedir}/src"/>
        </exec>
    </target>
    <target name="unit" description="Run unit tests with PHPUnit" depends="set-vendor, build-helper">
        <exec executable="${vendor}/bin/codecept">
            <arg value="run"/>
            <arg value="unit"/>
        </exec>
    </target>
    <target name="unit-group" depends="set-vendor, build-helper">
        <exec executable="${vendor}/bin/codecept">
            <arg value="run"/>
            <arg value="unit"/>
            <arg value="-g"/>
            <arg value="${group}"/>
        </exec>
    </target>
    <target name="unit-coverage-group" depends="set-vendor, build-helper" description="Run unit tests with Codeception For Continuous Integration">
        <exec executable="${vendor}/bin/codecept">
            <arg value="run"/>
            <arg value="unit"/>
            <arg value="--coverage-html"/>
            <arg value="-g"/>
            <arg value="${group}"/>
        </exec>
    </target>
    <target name="unit-group-namespace" depends="set-vendor, build-helper">
        <exec executable="${vendor}/bin/codecept">
            <arg value="run"/>
            <arg value="unit"/>
            <arg value="test/unit/${testNamespace}"/>
            <arg value="-g"/>
            <arg value="${group}"/>
        </exec>
    </target>
</project>
